<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            background-color: #B270A2;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        header {
            background-color: #E90074;
            color: #FFF078;
            padding: 20px;
            text-align: center;
        }

        header h1 {
            font-size: 2.5rem;
        }

        .task-container {
            max-width: 800px;
            margin: 30px auto;
            background-color: #F7B5CA;
            padding: 20px;
            border-radius: 10px;
            color: #FFF078;
        }

        h2 {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .task-list {
            list-style-type: none;
            padding-left: 0;
        }

        .task-list li {
            background-color: #E90074;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
        }

        .task-list li form {
            display: inline;
        }

        .task-list li a {
            color: #FFF078;
            text-decoration: none;
        }

        .task-list li a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <header>
        <h1>Task List</h1>
    </header>

    <div class="task-container">
        <h2>Your Tasks</h2>

        <ul class="task-list">
            <% tasks.forEach(task => { %>
                <li>
                    <span><%= task.text %> - <%= task.dueDate %> (Priority: <%= task.priority %>, Category: <%= task.category %>)</span>
                    <div>
                        <a href="/tasks/<%= task.id %>">View</a>
                        <form action="/delete/<%= task.id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>

        <a href="/" class="btn btn-primary">Back to Home</a>
    </div>

</body>
</html>
